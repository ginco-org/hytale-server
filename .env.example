# Hytale Server Docker Configuration
# Copy this file to .env and customize for your server

# ==================================================================
# REQUIRED SETTINGS
# ==================================================================

# Accept the Hytale EULA (required to run the server)
# Set to "true" to accept: https://www.hytale.com/eula
EULA=false

# ==================================================================
# MEMORY SETTINGS
# ==================================================================

# Memory allocation for the server
# Minimum: 4G, Recommended for 20 players: 6G, 50+ players: 12G
MEMORY=4G

# ==================================================================
# VERSION SETTINGS
# ==================================================================

# Server version to download
# Options: "latest" (default), "pre-release"
HYTALE_VERSION=latest

# ==================================================================
# NETWORK SETTINGS
# ==================================================================

# Bind address and port
# Default: 0.0.0.0:5520
# Note: Hytale uses UDP, not TCP
BIND_ADDRESS=0.0.0.0:5520

# ==================================================================
# AUTHENTICATION SETTINGS
# ==================================================================

# Authentication mode
# Options: "authenticated" (default), "offline"
AUTH_MODE=authenticated

# Authentication tokens for automated server setups
# Leave empty for interactive device authentication
# See: https://support.hytale.com/hc/en-us/articles/45328341414043
HYTALE_SERVER_SESSION_TOKEN=
HYTALE_SERVER_IDENTITY_TOKEN=
OWNER_UUID=

# ==================================================================
# SERVER OPTIONS
# ==================================================================

# Enable Ahead-Of-Time compilation cache for faster startup
ENABLE_AOT_CACHE=true

# Enable Sentry crash reporting
# Disable during plugin development
ENABLE_SENTRY=false

# Allow operators on the server
ALLOW_OP=true

# ==================================================================
# BACKUP SETTINGS
# ==================================================================

# Enable automatic backups
ENABLE_BACKUP=false

# Backup interval in minutes
BACKUP_FREQUENCY=30

# Backup directory (inside container)
BACKUP_DIR=/data/backups

# ==================================================================
# JVM OPTIONS
# ==================================================================

# Java Virtual Machine options
# Default uses G1GC with optimized settings
JVM_OPTS=-XX:+UseG1GC -XX:+ParallelRefProcEnabled -XX:MaxGCPauseMillis=200

# ==================================================================
# SERVER TYPE
# ==================================================================

# Server type: "vanilla" or custom types for modded servers
TYPE=vanilla

# ==================================================================
# ADVANCED SETTINGS
# ==================================================================

# Additional server arguments (optional)
# ADDITIONAL_ARGS=--max-players 50 --view-distance 12
